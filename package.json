		"simple-statistics" : "0.9.0",
		"console.table"     : "0.4.0"
	},
	"dependencies": {
		"babel-runtime"  : "^4.6.6",
		"pg"             : "^4.2.0",
		"lodash"         : "^3.1.0",
		"murmurhash-js"  : "^1.0.0",
		"random-strings" : "^0.0.1"
	}
